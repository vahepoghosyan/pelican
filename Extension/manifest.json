{
  "name": "Pelican",
  "version": "1.0",
  "description": "Pelican browser and extension. Helps you save money.",
  "permissions": ["activeTab", "declarativeContent", "storage", "https://pelicanbrowser.com/*"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
   "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
  
  
  "browser_action": {
	"default_popup": "popup.html",
	"default_title": "Pelican", 
    "default_icon": {
      "16": "images/logo_16x16.png",
      "32": "images/logo_32x32.png",
      "48": "images/logo_48x48.png",
      "128": "images/logo_128x128.png"
    }
  },

  
  
  "icons": {
    "16": "images/logo_16x16.png",
      "32": "images/logo_32x32.png",
      "48": "images/logo_48x48.png",
      "128": "images/logo_128x128.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": ["headscripts.js"]
}
